<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<fx:root type="VBox" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox>
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Filter players">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </Text>
            <TextField fx:id="filter" promptText="Search by name" />
            <Button fx:id="buttonSearch" mnemonicParsing="false" onAction="#search" text="Search" />
         </children>
      </HBox>
      <TableView fx:id="players">
        <columns>
          <TableColumn fx:id="nameColumn" text="Name" />
          <TableColumn fx:id="moneyColumn" text="Money" />
            <TableColumn fx:id="lastConnectionColumn" text="Last connection" />
        </columns>
      </TableView>
   </children>
</fx:root>
