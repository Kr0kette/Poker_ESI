<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root prefHeight="650.0" prefWidth="1000.0" type="BorderPane" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1">
   <left>
      <VBox spacing="10.0" style="-fx-border-color: red;" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="addPlayerButton" mnemonicParsing="false" onAction="#addPlayer" text="addPlayer">
               <VBox.margin>
                  <Insets />
               </VBox.margin></Button>
            <TextField fx:id="newPlayerName" maxHeight="-Infinity" maxWidth="-Infinity" promptText="Player Name" />
            <TextField fx:id="newPlayerMoney" maxHeight="-Infinity" maxWidth="-Infinity" promptText="Player Money" />
         </children>
      </VBox>
   </left>
   <bottom>
      <HBox fx:id="playersLayout" prefHeight="100.0" prefWidth="200.0" style="-fx-border-color: red;" BorderPane.alignment="CENTER" />
   </bottom>
   <right>
      <VBox spacing="10.0" style="-fx-border-color: red;" BorderPane.alignment="CENTER">
         <children>
            <HBox>
               <children>
                  <Label text="Min bet : " />
                  <Label fx:id="minBet" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <Label text="SmallBlind :" />
                  <Label fx:id="smallBlindValue" />
               </children>
            </HBox>
            <Button fx:id="allInButton" mnemonicParsing="false" onAction="#allIn" text="AllIn" />
            <Button fx:id="foldButton" mnemonicParsing="false" onAction="#fold" text="Fold" />
            <Button fx:id="callButton" mnemonicParsing="false" onAction="#call" text="Call" />
            <Button fx:id="raiseButton" mnemonicParsing="false" onAction="#raise" text="Raise" />
            <Button fx:id="smallBlindButton" mnemonicParsing="false" onAction="#smallBlind" text="SmallBlind" />
            <Button fx:id="bigBlindButton" mnemonicParsing="false" onAction="#bigBlind" text="BigBlind" />
            <TextField fx:id="betAmount" promptText="Amount" />
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin></VBox>
   </right>
   <center>
      <VBox fx:id="centerBox" style="-fx-border-color: red;" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="20.0" style="-fx-border-color: blue;">
               <children>
                  <Button fx:id="startButton" disable="true" mnemonicParsing="false" onAction="#start" text="Start" />
                  <Button fx:id="stopButton" disable="true" mnemonicParsing="false" onAction="#start" text="Stop" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</fx:root>
